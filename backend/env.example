# Backend Environment Variables

# Application Settings
PROJECT_NAME=SCPI Simulator API
VERSION=1.0.0
API_V1_STR=/api/v1
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Settings (comma-separated URLs)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Database Configuration
DATABASE_URL=postgresql://scpi_user:scpi_password@db:5432/scpi_simulator
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_NAME=scpi_simulator
DATABASE_USER=scpi_user
DATABASE_PASSWORD=scpi_password

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# SCPI Configuration - Com√®te
COMETE_PRICE_PER_SHARE=250.0
COMETE_MIN_INVESTMENT=5000.0
COMETE_ANNUAL_YIELD=0.045
COMETE_CAPITAL_APPRECIATION=0.025

# SCPI Configuration - ActivImmo
ACTIVIMMO_PRICE_PER_SHARE=610.0
ACTIVIMMO_MIN_INVESTMENT=6100.0
ACTIVIMMO_ANNUAL_YIELD=0.055
ACTIVIMMO_CAPITAL_APPRECIATION=0.03

# Investment Duration Limits
MIN_INVESTMENT_DURATION=1
MAX_INVESTMENT_DURATION_FULL=20
MAX_INVESTMENT_DURATION_BARE=12

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# External Services (optional)
SENTRY_DSN=
MONITORING_ENABLED=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
FROM_EMAIL=noreply@alderan.fr

# File Upload (if needed for future features)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Testing
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5433/test_scpi_simulator
